apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: mariadb-{{.Name}}
  namespace: {{.Namespace}}
  labels:
    app: mariadb-{{.Name}}
    component: data-science-pipelines
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{.MariaDB.StorageClassName}}
  resources:
    requests:
      storage: {{.MariaDB.PVCSize}}
