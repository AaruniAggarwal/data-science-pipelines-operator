apiVersion: v1
kind: PersistentVolumeClaim
metadata:
    name: minio-{{.Name}}
    namespace: {{.Namespace}}
    labels:
        app: minio-{{.Name}}
        component: data-science-pipelines
spec:
    accessModes:
        - ReadWriteOnce
    storageClassName: {{.Minio.StorageClassName}}
    resources:
        requests:
            storage: {{.Minio.PVCSize}}
